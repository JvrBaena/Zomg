!!!
html
  head
    title ZOMG!
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap-responsive.css')
    link(href='http://fonts.googleapis.com/css?family=Freckle+Face', rel='stylesheet', type='text/css')

  body
    div(class='navbar navbar-fixed-top')
      div(class='navbar-inner')
        .container
          a(class='brand', href='/')
            |ZOMG!
    .container-fluid
      .row-fluid
        .span2
          div(class='well', style='max-width: 340px; padding: 8px 0;')
            ul(class='nav nav-list')
              li.nav-header Place a...
              li.active
                a(href="#", id="zom", data-type='Zombie') Zombie!            
              li
                a(href="#", id="sur", data-type='Survivor') Survivors!            
              li
                a(href="#", id="wea", data-type='Weapon') Weapons!           
              li
                a(href="#", id="foo", data-type='Food') Food!
        .span10
          .well
            != body
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    script(src='https://maps.google.com/maps/api/js?sensor=false')
    script(src='/socket.io/socket.io.js')
    script(src='/lib/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/zomg.js')
    script(src='/javascripts/marker.js')
    script
      $(document).ready(function() {
        var socket = io.connect('http://localhost');
        zomg.geo.init('#map', socket);
        $('#zom, #sur, #wea, #foo').on('click', function(ev) {
          $('.active').removeClass('active');
          $(ev.target).parent().addClass('active');
        });
      });

